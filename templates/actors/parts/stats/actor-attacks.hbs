<div class="flexrow table-header red no-wrap">
    <div class="flex2 center">
        <div class="field-label ellipsis">{{ localize 'COF.attack.label' }}</div>
    </div>
    <div class="flex1 center">
        <div class="field-label">{{ localize 'COF.ui.base' }}</div>
    </div>
    <div class="flex1 center">
        <div class="field-label">{{ localize 'COF.ui.bonus' }}</div>
    </div>
    <div class="flex1 center">
        <div class="field-label">{{ localize 'COF.ui.malus' }}</div>
    </div>
    <div class="flex1 center">
        <div class="field-label">{{ localize 'COF.ui.total' }}</div>
    </div>
</div>
{{#each actor.data.attacks as |attack id|}}
    {{!#if attack.enabled}}
        <div class="flexrow no-wrap">
            <div class="flex2 center bg-red rollable" data-rolling="data.attacks.{{id}}" data-roll-type="skillcheck">
                <span class="field-label ellipsis"><i class="fas fa-dice-d20"></i>&nbsp;{{ localize attack.abbrev }}</span>
                <input name="data.attacks.{{id}}.abbrev" type="hidden" value="{{attack.abbrev}}" data-dtype="String"/>
                <input name="data.attacks.{{id}}.label" type="hidden" value="{{attack.label}}" data-dtype="String"/>
                <input name="data.attacks.{{id}}.key" type="hidden" value="{{attack.key}}" data-dtype="String"/>
            </div>
            <div class="flex1 center cell readonly">
                {{#if (isNull attack.base)}}
                    <input class="field-value" name="data.attacks.{{id}}.base" readonly="true" type="text" value="" placeholder="Base" data-dtype="Number"/>
                {{else}}
                    <input class="field-value" name="data.attacks.{{id}}.base" readonly="true" type="text" value="{{numberFormat attack.base decimals=0 sign=true}}" placeholder="Base" data-dtype="Number"/>
                {{/if}}
            </div>
            <div class="flex1 center cell">
                {{#if (isNull attack.base)}}
                    <input class="field-value" name="data.attacks.{{id}}.bonus" type="text" value="" placeholder="Bonus" data-dtype="Number"/>
                {{else}}
                    <input class="field-value" name="data.attacks.{{id}}.bonus" type="text" value="{{numberFormat attack.bonus decimals=0 sign=true}}" placeholder="Bonus" data-dtype="Number"/>
                {{/if}}
            </div>
            <div class="flex1 center cell">
                {{#if (isNull attack.base)}}
                    <input class="field-value" name="data.attacks.{{id}}.malus" type="text" value="" placeholder="Malus" data-dtype="Number"/>
                {{else}}
                    <input class="field-value" name="data.attacks.{{id}}.malus" type="text" value="{{numberFormat attack.malus decimals=0 sign=true}}" placeholder="Malus" data-dtype="Number"/>
                {{/if}}
            </div>
            <div class="flex1 center cell readonly">
                {{#if (isNull attack.base)}}
                    <input class="field-value" name="data.attacks.{{id}}.mod" readonly="true" type="text" value="" placeholder="Mod" data-dtype="Number"/>
                {{else}}
                    <input class="field-value" name="data.attacks.{{id}}.mod" readonly="true" type="text" value="{{numberFormat attack.mod decimals=0 sign=true}}" placeholder="Mod" data-dtype="Number"/>
                {{/if}}
            </div>
        </div>
    {{!else}}
<!--        <div class="flexrow"><div class="flex1 spacer"></div></div>-->
    {{!/if}}
{{/each}}
