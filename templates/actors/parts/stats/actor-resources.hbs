<div class="flexrow table-header color-resource no-wrap">
    <div class="flex8 center color-resource">
        <div class="field-label ellipsis">{{ localize 'COF.attributes.resources.label' }}</div>
    </div>
    <div class="flex3 center color-resource">
        <div class="field-label">{{ localize 'COF.ui.base' }}</div>
    </div>
    <div class="flex3 center color-resource">
        <div class="field-label">{{ localize 'COF.ui.bonus' }}</div>
    </div>
    <div class="flex3 center color-resource">
        <div class="field-label">{{ localize 'COF.ui.max' }}</div>
    </div>
    <div class="flex3 center color-resource">
        <div class="field-label">{{ localize 'COF.ui.current' }}</div>
    </div>
</div>
{{#if (isEnabled "useMana")}}
<div class="flexrow no-wrap">
    <div class="flex8 center bg-resource">
        <span class="field-label ellipsis"><i class="fas fa-hand-sparkles"></i>&nbsp;{{ localize 'COF.attributes.mp.abbrev' }}</span>
    </div>
    <div class="flex3 center cell readonly">
        <input class="field-value" name="data.attributes.mp.base" type="text" readonly="true" value="{{actor.data.attributes.mp.base}}" placeholder="Base" data-dtype="Number"/>
    </div>
    <div class="flex3 center cell">
        <input class="field-value" name="data.attributes.mp.bonus" type="text" value="{{numberFormat actor.data.attributes.mp.bonus decimals=0 sign=true}}" placeholder="Bonus" data-dtype="Number"/>
    </div>
    <div class="flex3 center cell readonly">
        <input class="field-value" name="data.attributes.mp.max" type="text" readonly="true" value="{{actor.data.attributes.mp.max}}" placeholder="Max" data-dtype="Number"/>
    </div>
    <div class="flex3 center cell">
        <input class="field-value" name="data.attributes.mp.value" type="text" value="{{actor.data.attributes.mp.value}}" placeholder="Value" data-dtype="Number"/>
    </div>    
</div>
{{/if}}
