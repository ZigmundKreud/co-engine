<h3 class="form-header">Type d'équipement</h3>
<div class="form-group">
    <label>Sous-catégorie</label>
    <div class="form-fields">
        <select name="data.subtype" data-type="String" style="width:100%">
            {{#select data.subtype}}
                {{#each config.itemCategories as | category id |}}
                    <option value="{{id}}">{{localize category}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
</div>

<div class="form-group stacked">
    <label>Traits</label>
    <div class="form-fields">
        <label class="checkbox">
            <input type="checkbox" name="data.properties.equipment" {{checked data.properties.equipment}}> {{localize "COF.properties.equipment"}}
        </label>
        <label class="checkbox">
            <input type="checkbox" name="data.properties.weapon" {{checked data.properties.weapon}}> {{localize "COF.properties.weapon"}}
        </label>
        <label class="checkbox">
            <input type="checkbox" name="data.properties.protection" {{checked data.properties.protection}}> {{localize "COF.properties.protection"}}
        </label>
        <label class="checkbox">
            <input type="checkbox" name="data.properties.ranged" {{checked data.properties.ranged}}> {{localize "COF.properties.ranged"}}
        </label>
        <label class="checkbox">
            <input type="checkbox" name="data.properties.effects" {{checked data.properties.effects}}> {{localize "COF.properties.effects"}}
        </label>
    </div>
</div>

{{#if data.properties.equipment}}
    {{> "systems/cof/templates/items/parts/details/equipment-details.hbs"}}
{{/if}}
{{#if data.properties.weapon}}
    {{> "systems/cof/templates/items/parts/details/weapon-details.hbs"}}
{{/if}}
{{#if data.properties.protection}}
    {{> "systems/cof/templates/items/parts/details/protection-details.hbs"}}
{{/if}}
{{#if data.properties.ranged}}
    {{> "systems/cof/templates/items/parts/details/ranged-details.hbs"}}
{{/if}}
{{#if data.properties.effects}}
    {{> "systems/cof/templates/items/parts/details/effects-details.hbs"}}
{{/if}}
{{#if data.properties.spell}}
    {{> "systems/cof/templates/items/parts/details/spell-details.hbs"}}
{{/if}}
{{#if actor}}
    {{> "systems/cof/templates/items/parts/details/usage-details.hbs"}}
{{/if}}
